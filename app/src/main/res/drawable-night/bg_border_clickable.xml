<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background when is pressed -->
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="1000dp" />
            <stroke android:width="1dp" android:color="@color/black_400" />
            <solid android:color="@color/black_400"/>
        </shape>
    </item>
    <!-- Default background -->
    <item>
        <shape>
            <corners android:radius="1000dp" />
            <stroke android:width="1dp" android:color="@color/black_300" />
        </shape>
    </item>
</selector>