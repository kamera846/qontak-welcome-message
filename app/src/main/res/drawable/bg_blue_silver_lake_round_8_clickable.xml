<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background when is pressed -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/blue_indigo_dye"/>
            <corners android:radius="8dp" />
            <stroke
                android:color="@color/blue_indigo_dye"
                android:width="1dp" />
        </shape>
    </item>
    <!-- Default background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/blue_silver_lake"/>
            <corners android:radius="8dp" />
            <stroke
                android:color="@color/blue_silver_lake"
                android:width="1dp" />
        </shape>
    </item>
</selector>