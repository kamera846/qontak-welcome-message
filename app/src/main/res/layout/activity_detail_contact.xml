<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.contact.DetailContactActivity">

    <include
        android:id="@+id/title_bar"
        layout="@layout/component_title_bar_light"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Profile Container -->
            <LinearLayout
                android:id="@+id/profile_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="horizontal"
                android:gravity="center">

                <FrameLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/circular_border_black" />

                    <ImageView
                        android:id="@+id/iv_profile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/logo_dark_circle"/>

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Store Name"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:theme="@style/Theme.TopMortarSales.BaseTextTitle" />

                    <EditText
                        android:visibility="gone"
                        android:id="@+id/et_name"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:theme="@style/Theme.TopMortarSales.BaseTextDescription"
                        android:textColorHint="@color/black_600"
                        android:hint="Enter Store Name"
                        android:inputType="textCapWords"
                        android:autofillHints="Input Name"
                        android:textSize="14sp"
                        android:background="@drawable/et_background"
                        android:paddingHorizontal="12dp"
                        android:outlineProvider="none" />

                    <TextView
                        android:id="@+id/tv_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Top Mortar Customer"
                        android:textSize="14sp"
                        android:theme="@style/Theme.TopMortarSales.BaseTextDescription" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="32dp"
                android:layout_marginVertical="16dp"
                android:theme="@style/Theme.TopMortarSales.BaseLine"/>

            <!-- Form Container -->
            <LinearLayout
                android:id="@+id/detail"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="16dp"
                android:orientation="vertical">

                <!-- Text Phone -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/tv_phone_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="@drawable/background_rounded"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ic_phone"
                            android:layout_width="58dp"
                            android:layout_height="58dp"
                            android:padding="16dp"
                            android:src="@drawable/phone_black" />

                        <TextView
                            android:id="@+id/tv_phone"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="+628000000000"
                            android:textSize="16sp"
                            android:theme="@style/Theme.TopMortarSales.BaseTextDescription" />

                        <ImageView
                            android:id="@+id/tooltip_phone"
                            android:layout_width="58dp"
                            android:layout_height="58dp"
                            android:padding="18dp"
                            android:src="@drawable/circle_info_black" />

                    </LinearLayout>

                    <!-- Edit Phone -->
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/et_phone_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="@drawable/et_background"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="58dp"
                            android:layout_height="58dp"
                            android:padding="16dp"
                            android:src="@drawable/phone_black" />

                        <EditText
                            android:id="@+id/et_phone"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:theme="@style/Theme.TopMortarSales.BaseTextDescription"
                            android:textColorHint="@color/black_600"
                            android:hint="@string/input_phon_number_placeholder"
                            android:inputType="phone"
                            android:autofillHints="@string/input_phon_number_placeholder"
                            android:textSize="16sp"
                            android:background="@android:color/transparent"
                            android:outlineProvider="none"/>

                    </LinearLayout>

                </LinearLayout>

                <!-- Text Owner Name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/tv_owner_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="@drawable/background_rounded"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ic_owner"
                            android:layout_width="58dp"
                            android:layout_height="58dp"
                            android:padding="16dp"
                            android:src="@drawable/person_black" />

                        <TextView
                            android:id="@+id/tv_owner"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="Owner Name"
                            android:textSize="16sp"
                            android:theme="@style/Theme.TopMortarSales.BaseTextDescription" />

                        <ImageView
                            android:id="@+id/tooltip_owner"
                            android:layout_width="58dp"
                            android:layout_height="58dp"
                            android:padding="18dp"
                            android:src="@drawable/circle_info_black" />

                    </LinearLayout>

                    <!-- Edit Owner -->
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/et_owner_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="@drawable/et_background"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="58dp"
                            android:layout_height="58dp"
                            android:padding="16dp"
                            android:src="@drawable/person_black" />

                        <EditText
                            android:id="@+id/et_owner"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginEnd="16dp"
                            android:gravity="center_vertical"
                            android:theme="@style/Theme.TopMortarSales.BaseTextDescription"
                            android:textColorHint="@color/black_600"
                            android:hint="Enter Owner Name"
                            android:inputType="textCapWords"
                            android:autofillHints="Enter Owner Name"
                            android:textSize="16sp"
                            android:background="@android:color/transparent"
                            android:outlineProvider="none"/>

                    </LinearLayout>

                </LinearLayout>

                <!-- Text Maps -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/tv_maps_container"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/background_rounded"
                        android:orientation="horizontal">

                        <View
                            android:id="@+id/overlay_maps"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:alpha="0"
                            android:visibility="gone"
                            android:background="@drawable/background_item_overlay_rounded"/>

                        <ImageView
                            android:layout_alignParentStart="true"
                            android:id="@+id/ic_maps"
                            android:layout_width="58dp"
                            android:layout_height="58dp"
                            android:padding="16dp"
                            android:src="@drawable/location_black" />

                        <TextView
                            android:layout_toEndOf="@+id/ic_maps"
                            android:layout_toStartOf="@id/tooltip_maps"
                            android:id="@+id/tv_maps"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Maps Coordinates"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:textSize="16sp"
                            android:theme="@style/Theme.TopMortarSales.BaseTextDescription" />

                        <ImageView
                            android:layout_alignParentEnd="true"
                            android:id="@+id/tooltip_maps"
                            android:layout_width="58dp"
                            android:layout_height="58dp"
                            android:padding="18dp"
                            android:src="@drawable/circle_info_black" />

                    </RelativeLayout>

                    <!-- Edit Maps -->
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/et_maps_container"
                        android:layout_below="@+id/tv_maps_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="@drawable/et_background"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="58dp"
                            android:layout_height="58dp"
                            android:padding="16dp"
                            android:src="@drawable/location_black" />

                        <EditText
                            android:id="@+id/et_maps"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginEnd="16dp"
                            android:gravity="center_vertical"
                            android:theme="@style/Theme.TopMortarSales.BaseTextDescription"
                            android:textColorHint="@color/black_600"
                            android:hint="Enter Maps Coordinates/URL"
                            android:inputType="textCapWords"
                            android:autofillHints="Enter Owner Name"
                            android:textSize="16sp"
                            android:background="@android:color/transparent"
                            android:outlineProvider="none"/>

                    </LinearLayout>

                </RelativeLayout>

                <!-- Text City -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/tv_location_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="@drawable/background_rounded"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/ic_location"
                            android:layout_width="58dp"
                            android:layout_height="58dp"
                            android:padding="16dp"
                            android:src="@drawable/city_black" />

                        <TextView
                            android:id="@+id/tv_location"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="Sidoarjo"
                            android:textSize="16sp"
                            android:theme="@style/Theme.TopMortarSales.BaseTextDescription" />

                        <ImageView
                            android:id="@+id/tooltip_location"
                            android:layout_width="58dp"
                            android:layout_height="58dp"
                            android:padding="18dp"
                            android:src="@drawable/circle_info_black" />

                    </LinearLayout>

                    <!--    Edit City    -->
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/et_location_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="@drawable/et_background"
                        android:orientation="horizontal">


                        <ImageView
                            android:layout_width="58dp"
                            android:layout_height="58dp"
                            android:padding="16dp"
                            android:src="@drawable/city_black" />

                        <EditText
                            android:id="@+id/et_location"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginEnd="16dp"
                            android:gravity="center_vertical"
                            android:theme="@style/Theme.TopMortarSales.BaseTextDescription"
                            android:textColorHint="@color/black_600"
                            android:hint="Choose Customer City"
                            android:inputType="textCapWords"
                            android:autofillHints="Choose Owner Birthday"
                            android:textSize="16sp"
                            android:background="@android:color/transparent"
                            android:outlineProvider="none"/>

                    </LinearLayout>

                </LinearLayout>

                <!-- Text Birthday -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/tv_birthday_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="@drawable/background_rounded"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/ic_birthday"
                            android:layout_width="58dp"
                            android:layout_height="58dp"
                            android:padding="16dp"
                            android:src="@drawable/date_black" />

                        <TextView
                            android:id="@+id/tv_birthday"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="05 Juli 2023"
                            android:textSize="16sp"
                            android:theme="@style/Theme.TopMortarSales.BaseTextDescription" />

                        <ImageView
                            android:id="@+id/tooltip_birthday"
                            android:layout_width="58dp"
                            android:layout_height="58dp"
                            android:padding="18dp"
                            android:src="@drawable/circle_info_black" />

                    </LinearLayout>

                    <!--    Edit Birthday    -->
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/et_birthday_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="@drawable/et_background"
                        android:orientation="horizontal">


                        <ImageView
                            android:layout_width="58dp"
                            android:layout_height="58dp"
                            android:padding="16dp"
                            android:src="@drawable/date_black" />

                        <EditText
                            android:id="@+id/et_birthday"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginEnd="16dp"
                            android:gravity="center_vertical"
                            android:theme="@style/Theme.TopMortarSales.BaseTextDescription"
                            android:textColorHint="@color/black_600"
                            android:hint="Choose Owner Birthday"
                            android:inputType="textCapWords"
                            android:autofillHints="Choose Owner Birthday"
                            android:textSize="16sp"
                            android:background="@android:color/transparent"
                            android:outlineProvider="none"/>

                    </LinearLayout>

                </LinearLayout>

                <!-- Separator -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="32dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="32dp"
                        android:theme="@style/Theme.TopMortarSales.BaseLine"/>

                    <TextView
                        android:id="@+id/tv_other_information"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Other Information"
                        android:textSize="14sp"
                        android:theme="@style/Theme.TopMortarSales.TextBaseLine" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="32dp"
                        android:theme="@style/Theme.TopMortarSales.BaseLine"/>

                </LinearLayout>

                <!-- Text Address -->
                <LinearLayout
                    android:id="@+id/address_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:background="@drawable/background_rounded"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="Address"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp"
                        android:textStyle="bold"
                        android:theme="@style/Theme.TopMortarSales.BaseTextTitle" />

                    <EditText
                        android:id="@+id/et_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:textSize="16sp"
                        android:maxLines="5"
                        android:gravity="center_vertical"
                        android:textColorHint="@color/black_600"
                        android:hint="Enter Address"
                        android:text="Jl. TB Simatupang, RT.9/RW.3, Rambutan, Ciracas, Kota Jakarta Timur, Daerah Khusus Ibukota Jakarta 13830"
                        android:inputType="textMultiLine"
                        android:autofillHints="Enter Owner Name"
                        android:background="@android:color/transparent"
                        android:textColor="@color/et_color_with_disabled_state"
                        android:enabled="false"
                        android:outlineProvider="none"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Bottom Action -->
            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_send_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="Send Message" />

                <Button
                    android:visibility="gone"
                    android:id="@+id/btn_save_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="Save" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>