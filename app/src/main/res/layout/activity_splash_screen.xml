<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/primary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".SplashScreenActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_marginVertical="48dp"
        android:background="@color/primary"
        android:contentDescription="@string/logo_horizontal"
        android:scaleType="fitCenter"
        android:src="@drawable/logo_light_horizontal" />

    <LinearLayout
        android:id="@+id/card_auth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:background="@drawable/background_auth"
        android:orientation="vertical"
        android:padding="48dp"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="48dp"
            android:text="@string/card_auth_title"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="24sp"
            android:textStyle="bold"
            android:theme="@style/Theme.TopMortarSales.BaseTextTitle" />

        <!-- Email Address -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_email_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/text_email"
                android:textSize="18sp"
                android:textStyle="bold"
                android:theme="@style/Theme.TopMortarSales.BaseTextTitle" />

            <EditText
                android:id="@+id/et_email_address"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/et_background"
                android:inputType="textEmailAddress"
                android:labelFor="@+id/tv_email_address"
                android:outlineProvider="none"
                android:padding="12dp"
                android:textColorHint="@color/black_600"
                android:textSize="16sp"
                android:theme="@style/Theme.TopMortarSales.BaseTextDescription" />

        </LinearLayout>

        <!-- Password -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="48dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/text_password"
                android:textSize="18sp"
                android:textStyle="bold"
                android:theme="@style/Theme.TopMortarSales.BaseTextTitle" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_background">

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:autofillHints="johndoe@gmail.com"
                    android:background="@android:color/transparent"
                    android:inputType="textPassword"
                    android:labelFor="@+id/tv_password"
                    android:outlineProvider="none"
                    android:padding="12dp"
                    android:textColorHint="@color/black_600"
                    android:textSize="16sp"
                    android:theme="@style/Theme.TopMortarSales.BaseTextDescription" />

                <RelativeLayout
                    android:id="@+id/ic_eye_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="12dp">

                    <ImageView
                        android:id="@+id/ic_eye_close"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/eye_off_line"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/ic_eye_show"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/eye_line"
                        android:visibility="gone" />

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:padding="12dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/text_login" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_copyright"
                android:textAlignment="center"
                android:textSize="16sp"
                android:theme="@style/Theme.TopMortarSales.BaseTextDescription" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>