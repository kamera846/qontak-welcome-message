<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
    android:orientation="vertical">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@color/white"
       android:gravity="center_vertical"
       android:padding="16dp"
       android:orientation="horizontal">

      <ImageView
          android:id="@+id/ic_close_search"
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:layout_marginEnd="16dp"
          android:src="@drawable/baseline_arrow_back" />

      <EditText
          android:id="@+id/et_search_box"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:textColor="@color/black_200"
          android:textColorHint="@color/black_600"
          android:hint="@string/search_contact"
          android:inputType="none"
          android:autofillHints="@string/search_contact"
          android:textSize="16sp"
          android:paddingVertical="8dp"
          android:background="@color/white"
          android:outlineProvider="none"/>

      <ImageView
          android:visibility="gone"
          android:id="@+id/ic_clear_search"
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:layout_marginStart="16dp"
          android:src="@drawable/baseline_close" />

   </LinearLayout>

   <View
       android:id="@+id/v_border"
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:theme="@style/Theme.TopMortarSales.BaseLine" />
</LinearLayout>