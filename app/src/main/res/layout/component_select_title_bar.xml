<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/componentSelectTitleBarDark"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:theme="@style/Theme.TopMortarSales.TitleBar">

    <ImageView
        android:visibility="visible"
        android:id="@+id/ic_close_select"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:padding="12dp"
        android:layout_marginHorizontal="2dp"
        android:src="@drawable/close_white"
        android:contentDescription="@string/icon_back_white"/>

    <TextView
        android:id="@+id/selectionTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="0 Item Terpilih"
        android:textSize="18sp"
        android:textStyle="bold"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:focusable="true"
        android:singleLine="true"
        android:textColor="@color/white" />

    <ImageView
        android:visibility="visible"
        android:id="@+id/ic_confirm_select"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:padding="12dp"
        android:layout_marginHorizontal="2dp"
        android:src="@drawable/circle_check_white"
        android:contentDescription="@string/icon_back_white"/>

</LinearLayout>