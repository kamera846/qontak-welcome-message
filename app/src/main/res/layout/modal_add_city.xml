<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.TopMortarSales.BaseBackground"
    android:orientation="vertical">

    <include
        android:id="@+id/title_bar"
        layout="@layout/component_title_bar_light"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">

        <!-- City Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_city_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="City Name"
                    android:theme="@style/Theme.TopMortarSales.BaseTextTitle"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="*"
                    android:textColor="@color/primary"/>

            </LinearLayout>

            <EditText
                android:labelFor="@+id/tv_city_name"
                android:id="@+id/et_city_name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:theme="@style/Theme.TopMortarSales.BaseTextDescription"
                android:textColorHint="@color/black_600"
                android:hint="e.g Sidoarjo"
                android:inputType="textCapWords"
                android:autofillHints="e.g Sidoarjo"
                android:textSize="14sp"
                android:background="@drawable/et_background"
                android:padding="12dp"
                android:outlineProvider="none"/>

        </LinearLayout>

        <!-- City Code -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_city_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="City Code"
                    android:theme="@style/Theme.TopMortarSales.BaseTextTitle"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="*"
                    android:textColor="@color/primary"/>

            </LinearLayout>

            <EditText
                android:labelFor="@+id/tv_city_code"
                android:id="@+id/et_city_code"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:theme="@style/Theme.TopMortarSales.BaseTextDescription"
                android:textColorHint="@color/black_600"
                android:hint="e.g SDA"
                android:inputType="textCapCharacters"
                android:autofillHints="Enter City Name"
                android:textSize="14sp"
                android:background="@drawable/et_background"
                android:padding="12dp"
                android:outlineProvider="none"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Bottom Action -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primary"
            android:textColor="@color/white"
            android:padding="12dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Submit" />

        <Button
            android:visibility="gone"
            android:id="@+id/btn_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Save" />

    </LinearLayout>

</LinearLayout>