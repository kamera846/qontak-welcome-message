<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.TopMortarSales.BaseBackground"
    android:orientation="vertical">

    <include
        android:id="@+id/titleBarLight"
        layout="@layout/component_title_bar_light"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icStatus"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/checkbox_circle_light"
            android:contentDescription="Icon Status Report"/>

        <TextView
            android:id="@+id/tvDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text=" Menunggu | 0.123 km dari titik"
            android:theme="@style/Theme.TopMortarSales.TextBaseLine"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icDate"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginHorizontal="2dp"
            android:src="@drawable/time_light"
            android:contentDescription="Icon Status Report"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text=" 05 Juli 2023, 23:00"
            android:theme="@style/Theme.TopMortarSales.TextBaseLine"/>

    </LinearLayout>

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:textSize="14sp"
        android:text="@string/lorem_desc"
        android:theme="@style/Theme.TopMortarSales.BaseTextDescription" />

    <LinearLayout
        android:id="@+id/reportTypeContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Feedback Separator -->
        <LinearLayout
            android:id="@+id/reportTypeSeparator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reportTypeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tagihan Dibayarkan"
                android:layout_marginEnd="8dp"
                android:textSize="14sp"
                android:theme="@style/Theme.TopMortarSales.TextBaseLine" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:theme="@style/Theme.TopMortarSales.BaseLine"/>

        </LinearLayout>

        <TextView
            android:id="@+id/reportTypeDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingBottom="8dp"
            android:textSize="14sp"
            android:text="Rp. 500.000"
            android:theme="@style/Theme.TopMortarSales.BaseTextDescription" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/feedbackContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">

        <!-- Feedback Separator -->
        <LinearLayout
            android:id="@+id/date_separator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feedback"
                android:layout_marginEnd="8dp"
                android:textSize="14sp"
                android:theme="@style/Theme.TopMortarSales.TextBaseLine" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:theme="@style/Theme.TopMortarSales.BaseLine"/>

        </LinearLayout>

        <TextView
            android:id="@+id/approveMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:textSize="14sp"
            android:text="@string/lorem_desc"
            android:theme="@style/Theme.TopMortarSales.BaseTextDescription" />

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/checklistContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">

        <!-- Feedback Separator -->
        <LinearLayout
            android:id="@+id/checklist_separator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Laporan Checklist"
                android:layout_marginEnd="8dp"
                android:textSize="14sp"
                android:theme="@style/Theme.TopMortarSales.TextBaseLine" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:theme="@style/Theme.TopMortarSales.BaseLine"/>

        </LinearLayout>

        <TextView
            android:id="@+id/btnOpenChecklist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:paddingHorizontal="16dp"
            android:paddingTop="6dp"
            android:paddingBottom="8dp"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="Lihat Laporan â†’"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/bg_blue_silver_lake_round_8"/>

    </LinearLayout>

</LinearLayout>